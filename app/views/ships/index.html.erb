<body class="splash-spaceport"></body>
<p id="notice"><%= notice %></p>

<h1>Ships</h1>


    <% @ships.each do |ship| %>
    <div class="row">
        <div class="col s12 m6 l3 center-align">
         <div class="card">
           <div class="card-image">
             <%= image_tag ship.image.url(:large)%>
             <span class="card-title"><%= ship.name %></span>
           </div>
           <div class="card-content">
             <p>Cargo Containers: <%= ship.containers %></p>
             <p>Location: <%= ship.location %></p>
           </div>
           <div class="card-action">
             <%= link_to 'Show', ship %>
             <%= link_to 'Edit', edit_ship_path(ship) %>
             <%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %>
           </div>
          </div>
         </div>
    <% end %>
    </div>
<br>

<%= link_to 'New Ship', new_ship_path %>
